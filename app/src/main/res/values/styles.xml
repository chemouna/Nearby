<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:textColorSecondary">@color/secondary_text</item>
    <item name="android:divider">@color/divider</item>
  </style>

  <style name="AppTheme.BaseVenue">
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Translucent" parent="AppTheme.BaseVenue">
  </style>

  <style name="Widget.Nearby" parent="android:Widget" />

  <style name="Widget.Nearby.VenueDescription">
    <item name="android:textAppearance">@style/TextAppearance.VenueDescription</item>
    <!--<item name="android:lineHeightHint">24sp</item>-->
  </style>

  <style name="TextAppearance.VenueDescription" parent="TextAppearance.AppCompat.Subhead" >
    <item name="android:textColor">@color/text_tertiary_dark</item>
    <!--<item name="letterSpacing">0.01</item>-->
  </style>

  <style name="TextAppearance.GreyedOut" parent="TextAppearance.AppCompat.Caption" tools:ignore="NewApi">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:letterSpacing">0.02</item>
  </style>


  <style name="Widget.Nearby.VenueOption" parent="Widget.AppCompat.Button">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textAppearance">@style/TextAppearance.GreyedOut</item>
    <item name="android:drawablePadding">4dp</item>
    <item name="android:background">?android:selectableItemBackgroundBorderless</item>
  </style>

</resources>
